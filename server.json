{
    "servers" : [
        {
            "enabled" : true,
            "port" : 9093,
            "name" : "console",

            "locations" : [
                {
                    "uri" : "\\.tpl$",
                    "path" : "$root/app/$name/templates$uri",
                    "deny" : true
                },
                {
                    "uri" : ".*",
                    "path" : "$root/app/$name/templates$uri",
                    "deny" : false
                }
            ],

            "url_rewrites" : [
                {
                    "from" : "/(?<lang>en|fr|sp)/(?<uri>.*)",
                    "to" : "/$uri"
                }
            ],

            "app_configs" : [
                "$root/app/$name/config.json"
            ]
        },
        {
            "port" : 9090,
            "name" : "front",

            "locations" : [
                {
                    "uri" : ".html|.php",
                    "path" : "$root/app/$name/templates$uri"
                }
            ]
        }
    ]
}